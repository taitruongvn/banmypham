@using BanMyPham.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>

@{
    ViewBag.Title = "Sản phẩm chăm sóc cơ thể";
    Layout = "~/Views/Layout/NguoiDung/_NguoiDungLayout.cshtml";
}

<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                Sản phẩm chăm sóc cơ thể
            </h3>
        </div>

        <div class="row isotope-grid">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="@Url.Content("~/LayoutSources/images/"+ @item.HinhAnh+".jpg")" alt="IMG-PRODUCT">
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="@Url.Action("ChiTietSanPham","NguoiDung",new {@iMaSanPham=item.MaSanPham})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @item.TenSanPham
                                </a>

                                <span class="stext-105 cl3">
                                    @string.Format("{0:c}", item.DonGia)
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("SanPhamChamSocMat", new { page = page }))
        </div>

    </div>
</section>

<style>
    .section-slide {
        display: none;
    }

    .MenuTrang ul {
        list-style-type: none;
        padding: 0;
        overflow: hidden;
    }

    .MenuTrang li {
        float: left;
        border-right: 1px solid #bbb;
    }

        .MenuTrang li:last-child {
            border-right: none;
        }

        .MenuTrang li a {
            display: block;
            color: Black;
            text-align: center;
            padding: 10px 14px;
            text-decoration: none;
        }

            .MenuTrang li a:hover:not(.active) {
                background-color: black;
            }

    .active {
        background-color: black;
    }
</style>