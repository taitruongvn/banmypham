@using BanMyPham.Models;
@model List<SanPham>

<section class="bg0 p-t-23 p-b-5">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                Sản phẩm bán chạy
            </h3>
        </div>

        <div class="row isotope-grid">
            @foreach (var item in Model)
            {

                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="@Url.Content("~/LayoutSources/images/"+ @item.HinhAnh+".jpg")" alt="IMG-PRODUCT">
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="@Url.Action("ChiTietSanPham","NguoiDung",new {@iMaSanPham=item.MaSanPham})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @item.TenSanPham
                                </a>

                                <a href="@Url.Action("ChiTietSanPham","NguoiDung",new {@iMaSanPham=item.MaSanPham})" class="stext-105 cl3">
                                    @if (item.GiamGia != null && item.GiamGia > 0)
                                    {
                                        <div>
                                            <div style="float: left"><p style="text-decoration-line: line-through; font-style: italic">@string.Format("{0:c}", item.DonGia)</p></div>
                                            <div style="float: left; margin-left: 10px"><p style="color: red">@string.Format("{0:c}", item.DonGia - item.GiamGia)</p></div>
                                        </div>
                                    }
                                    else
                                    {
                                        <p>@string.Format("{0:c}", item.DonGia)</p>
                                    }
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45" style="margin-top: -50px; margin-bottom: 30px">
            <a href="@Url.Action("SanPhamBanChay","NguoiDung")" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Xem thêm
            </a>
        </div>

    </div>
</section>
